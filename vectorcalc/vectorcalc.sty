% 0 %%%%%%%%%% BACKGROUND
% 0.1 Overview
%	Explicit definitions for different types of things that may be useful in vector calculus.
% 0.2 Motivation
%	Create macros for common things in vector calculus than can be easily redefined to the user's preferences.

% 1 %%%%%%%%%% DECLARATIONS
\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{vectorcalc}[15/11/2022 Vector Calc Stuff]

% 2 %%%%%%%%%% DEPENDENCIES
\RequirePackage{amsmath}
\RequirePackage{../nestmacro/nestmacro}

% 3 %%%%%%%%%% OPTIONS

% 4 %%%%%%%%%% FUNCTIONALITY
\newcommand{\dsign}{\text{d}}
\newcommand{\diff}[3][]{\frac{\dsign ^{#1}#2}{\dsign #3^{#1}}}
\newcommand{\pdiff}[3][]{\frac{\partial^{#1}#2}{\partial#3^{#1}}}

\def\vec#1{\underline{#1}}
\def\dyad#1{\vec{\vec{#1}}}
\def\grad#1{\vec{\nabla}#1}
\def\div#1{\vec{\nabla} \cdot #1}
\def\curl#1{\vec{\nabla} \times #1}
\def\laplacian{\nabla^2}

% now with better tensor macro
\def\tensor#1#2{\nestmacro{#1}{\underline}{#2}}